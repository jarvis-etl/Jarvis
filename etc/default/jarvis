JARVIS_DATA="${JARVIS_BASE}/data"
JARVIS_ETC="${JARVIS_BASE}/etc/jarvis"

JARVIS_LOG="${JARVIS_VAR}/log/jarvis.log"

JARVIS_PIPE="/home/jarvis/pipes"
