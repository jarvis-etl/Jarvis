if [ -e "/etc/default/jarvis" ]
then 
	. "/etc/default/jarvis"
else
	echo "Cannot load defaults. Exiting..."
	exit 1
fi

if [ -z ${2} ]
then
	JR_NAME=$(find ${JARVIS_ETC} -type f -name "*.conf" | sed 's@.*/\([^/]*\).conf@\1@g')
else
	if [ -e "${JARVIS_ETC}/${2}.conf" ]
	then
		JR_NAME[1]=${2}
	else
		echo "Cannot find module ${2}.  Exiting..."
		exit 1
	fi
fi

loadconf ()
{
	unset JR_HOST
	. "${JARVIS_ETC}/${1}.conf"
	echo "Module \"${1}\" loaded."
	JR_NAME_UC=${1^^[a-z]}
}

start ()
{
	for j in ${JR_NAME[@]}
	do
		loadconf ${j}

		for i in `seq 1 ${#JR_HOST[@]}`
		do
			echo "Starting reader ${i}..."
			cat ${JARVIS_PIPE}/${j}${i} | awk -f ${JARVIS_LIB}/common.awk -f ${JARVIS_LIB}/${j}.awk -v server=${i} -v datadir=${JARVIS_DATA} 2>&1 &
			JR_PID="$!"
			echo ${JR_PID} > ${JARVIS_VAR}/run/${j}${i}_read.pid
			echo "`date +"%F %T"` JARVIS ${JR_NAME_UC} READER ${i} -- Started [${JR_PID}]" >> ${JARVIS_LOG}
		done
	done
}

stop ()
{
	for j in ${JR_NAME[@]}
	do
		loadconf ${j}

		for i in `seq 1 ${#JR_HOST[@]}`
		do
			echo "Stopping reader ${i}..."
			JR_PID=$(<${JARVIS_VAR}/run/${j}${i}_read.pid)
			[ -n "$(ps x ${JR_PID} | grep ${JR_PID} | grep "${j}.awk")" ] && kill $JR_PID
			rm ${JARVIS_VAR}/run/${j}${i}_read.pid
			echo "`date +"%F %T"` JARVIS ${JR_NAME_UC} READER ${i} -- Stopped [${JR_PID}]" >> ${JARVIS_LOG}
		done
	done
}

status ()
{
	for j in ${JR_NAME[@]}
	do
		loadconf ${j}

		for i in `seq 1 ${#JR_HOST[@]}`
		do
			if [ -e "${JARVIS_VAR}/run/${j}${i}_read.pid" ]
			then
				JR_PID=$(<${JARVIS_VAR}/run/${j}${i}_read.pid)
				if [ -n "$(ps x ${JR_PID} | grep ${JR_PID} | grep "${j}.awk")" ]
				then
					echo "${j}${i} - Running"
				else
					echo "${j}${i} - Not Running"
				fi
			else
				echo "${j}${i} - Not Running"
			fi
		done
	done
}

case "${1}" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		stop
		sleep 1
		start
		;;
	status)
		status
		;;
	*)
		echo $"Usage: $0 {start|stop|restart|status} <group>"
		exit 1
esac
